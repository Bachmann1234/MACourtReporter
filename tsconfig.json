{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "noUnusedLocals": true,
    "baseUrl": "src",
    "paths": {
      "*": ["*"]
    }
  },
  "moduleResolution": "node",
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
